<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PooleInit">

    <RelativeLayout
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp">

        <TextView
                android:id="@+id/pooleSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="147dp"
                android:text="Poole size: (default: 6)"
                android:textSize="16sp" />

        <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pooleSize"
                android:layout_alignStart="@+id/pooleSize"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-120dp"
                android:onClick="selectAmount"
                android:text="Select" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/namesLO"
            android:layout_width="wrap_content"
            android:layout_height="470dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="-262dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="27dp"
            android:onClick="moveToNext">

        <EditText
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Name 1"
                android:inputType="textPersonName" />

        <EditText
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_alignStart="@+id/name1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Name 2"
                android:inputType="textPersonName" />

        <EditText
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name2"
                android:layout_alignStart="@+id/name1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Name 3"
                android:inputType="textPersonName" />

        <EditText
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name3"
                android:layout_alignStart="@+id/name1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Name 4"
                android:inputType="textPersonName" />

        <EditText
                android:id="@+id/name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name4"
                android:layout_alignStart="@+id/name1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Name 5"
                android:inputType="textPersonName" />

        <EditText
                android:id="@+id/name6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name5"
                android:layout_alignStart="@+id/name1"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Name 6"
                android:inputType="textPersonName"
                android:visibility="visible" />

        <EditText
                android:id="@+id/name7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name6"
                android:layout_alignStart="@+id/name1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Name 7"
                android:inputType="textPersonName"
                android:visibility="invisible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="29dp"
                android:clickable="true"
                android:onClick="moveToNext"
                app:srcCompat="@android:drawable/ic_media_play" />

    </RelativeLayout>

</RelativeLayout>